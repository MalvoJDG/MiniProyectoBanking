@using MiniProyectoBanking.Core.Application.ViewModels.Transacciones
@model SaveTransaccionViewModel

@{
    ViewData["Title"] = "Transferencia";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        @if (TempData["ModelErrors"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <ul>
                    @foreach (var error in (List<string>)TempData["ModelErrors"])
                    {
                        <li>@error</li>
                    }
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="mb-4">
            <h2>Realizar Transferencia</h2>
            <form asp-action="SaveTransferencia" asp-controller="Transferencia" method="post">
                <div class="form-group">
                    <label asp-for="CuentaOrigenId">Cuenta Origen</label>
                    <input type="text" class="form-control" asp-for="CuentaOrigenId" name="CuentaOrigenId" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="CuentaDestinoId">Cuenta Destino</label>
                    <input type="text" class="form-control" asp-for="CuentaDestinoId" name="CuentaDestinoId" required />
                </div>
                <div class="form-group">
                    <label asp-for="Monto">Monto</label>
                    <input type="text" class="form-control" asp-for="Monto" name="Monto" required />
                </div>
                <button type="submit" class="btn btn-success">Transferir</button>
                <input type="hidden"  asp-for="Tipo" value="Transferencia Cuente"/>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
