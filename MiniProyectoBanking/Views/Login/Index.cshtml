@using MiniProyectoBanking.Core.Application.ViewModels.Usuarios;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row nt-5">
        <div class="col-6 offset-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center">Iniciar sesión</h3>
                    <form method="post" asp-controller="Login" asp-action="Index">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        @if (Model.HasError)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <p>@Model.Error</p>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Nombre de usuario: </label>
                            <input class="form-control" asp-for="Username" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Contraseña: </label>
                            <input class="form-control" asp-for="Password" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success mb-3">Iniciar sesión</button>
                            <p class="mt-3 ">¿No tienes cuenta aún? <a class="text-success" asp-controller="Login" asp-action="Registro">Regístrate aquí</a></p>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>